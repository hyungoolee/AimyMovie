@{
    ViewBag.Title = "No Pay No Play";
}

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
            { field: "Name" },
            { field: "Genre" },
            { field: "Price", format: "{0:c2}", footerTemplate: "Total: #=kendo.toString(sum, 'c2')#" },
            { command: ["destroy"], width: 180 }
        ],
        toolbar: [
            { template: "<a role='button' class='k-button k-button-icontext' href='/Movies'>BACK TO LIST</a>" }
        ],
        dataSource: {
            type: "aspnetmvc-ajax",
            transport: {
                read: {
                    url: "Movies_Read"
                },
                destroy: {
                    url: "Movies_Destroy"
                }
            },
            schema: {
                data: "Data",
                model: {
                    id: "Id",
                    fields: {
                        Id: { type: "number" },
                        Name: { type: "string" },
                        Genre: { type: "string" },
                        Price: { type: "number" }
                    }
                }
            },
            aggregate: [
                { field: "Price", aggregate: "sum" }
            ],
            change: function(e) {
                if (e.action === "remove") {
                    var grid = $("#grid").data("kendoGrid");
                    var dataSource = this;
                    var sum = 0;
                    dataSource.data().forEach(m => sum += m.Price);
                    dataSource.aggregates().Price.sum = sum;
                    grid.footer.find(".k-footer-template").replaceWith(grid.footerTemplate(dataSource.aggregates()));
                }
            }
        },
        editable: {
            mode: "inline",
            confirmation: false
        },
        selectable: "single row",
        scrollable: false
    })

</script>
